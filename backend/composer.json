{
    "name": "siconvis/backend",
    "description": "SICONVIS - Sistema de Control de Visitantes",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "SAGAUT\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SAGAUT\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
